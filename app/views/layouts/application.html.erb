  </head>

  <body class="bg-purple-50 h-full w-full">
    <%= render partial: "layouts/nav" %>

    <main class="container mx-auto mt-28 px-5">
      <%= render partial: "shared/flash_messages" %>

      <%= yield %>
    </main>
  </body>
</html>
